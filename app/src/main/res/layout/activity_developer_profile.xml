                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rayhan Patoary"
                android:layout_gravity="center_horizontal"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="1dp"
                android:clickable="true"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01611477940"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="6dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="patoary35-1233@diu.edu.bd"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="6dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook.com/patoary Rayhan"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="6dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_facebook"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studing Bsc in Software Engineering"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="6dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_local_library_black_24dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skils: Android Applicaton Development and java spring framework"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#fff"
                android:padding="6dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_accessibility_black_24dp"
                android:layout_marginBottom="1dp"/>

        </LinearLayout>
